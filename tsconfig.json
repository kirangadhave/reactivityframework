{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*"]
}
